CREATE TABLE CentrosDeTrabajo (
    IdCentro INT PRIMARY KEY,
    NombreCentro VARCHAR(255) NOT NULL
);
CREATE TABLE Puestos (
    IdPuesto INT PRIMARY KEY,
    NombrePuesto VARCHAR(255) NOT NULL,
    DescripcionPuesto VARCHAR(255)
);
CREATE TABLE Directivos (
    IdDirectivo INT PRIMARY KEY,
    NombreDirectivo VARCHAR(50)
);
CREATE TABLE Empleados (
    NumeroEmpleado INT PRIMARY KEY,
    Nombre VARCHAR(255) NOT NULL,
    ApellidoPaterno VARCHAR(255) NOT NULL,
    ApellidoMaterno VARCHAR(255) NOT NULL,
    FechaNacimiento DATE,
    RFC VARCHAR(13) UNIQUE NOT NULL,
    CentroDeTrabajo INT,
    Puesto INT,
    Directivo INT,
    FOREIGN KEY (CentroDeTrabajo) REFERENCES CentrosDeTrabajo(IdCentro),
    FOREIGN KEY (Puesto) REFERENCES Puestos(IdPuesto),
    FOREIGN KEY (Directivo) REFERENCES Directivos(IdDirectivo)
);
